<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@color/colorWhite">

    <FrameLayout
        android:id="@+id/topDelimiterView"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/checkboxBorderColor"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/optionText"
        style="@style/TextStyleLight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="parent"
        app:layout_constraintBottom_toTopOf="parent"
        android:layout_marginStart="16dp"
        tools:text="Homem" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/checkSelectSymbolView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_check_success_group"
        app:layout_constraintTop_toBottomOf="parent"
        app:layout_constraintBottom_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="30dp"
        />

    <FrameLayout
        android:id="@+id/bottomDelimiterView"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/checkboxBorderColor"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>