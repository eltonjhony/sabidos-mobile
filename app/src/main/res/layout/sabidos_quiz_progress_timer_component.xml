<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="50dp"
    android:layout_height="50dp">

    <com.sabidos.presentation.components.CircularSeekBar
        android:id="@+id/circularSeekComponent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cs_circle_color="@color/disableButtonColor"
        app:cs_circle_fill="@android:color/transparent"
        app:cs_circle_progress_color="@color/colorPrimary"
        app:cs_circle_stroke_width="3dp"
        app:cs_circle_style="round"
        app:cs_disable_pointer="false"
        app:cs_negative_enabled="false"
        app:cs_pointer_angle="1"
        app:cs_pointer_color="@color/colorPrimary"
        app:cs_pointer_icon="@mipmap/ic_launcher_round"
        app:cs_pointer_stroke_width="6dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/timerLabel"
        style="@style/TextStyleMedium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="25"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>